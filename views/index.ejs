<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Pokédex</title>
</head>
<body>
    <h1>Pokedéx</h1>
    <ul>
        <% pokemons.forEach(function(pokemon) { %>
            <li>
                <a href="/pokemon/<%= pokemon.id %>"><%= pokemon.nome %></a> - <%= pokemon.tipo %>
            </li>
        <% }); %>
    </ul>

    <h2>Criar novo Pokémon</h2>
    <form action="/pokemon" method="POST">
        <label for="nome">Nome do Pokémon:</label>
        <input type="text" id="nome" name="nome" required>

        <label for="tipo">Tipo do Pokémon:</label>
        <input type="text" id="tipo" name="tipo" required>

        <button type="submit">Criar Pokémon</button>
    </form>

</body>
<style>
    body {
    font-family: Arial, sans-serif;
    margin: 20px;
    background-color: #f9f9f9;
}

h1 {
    color: #333;
}

h2 {
    margin-top: 20px;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    margin: 5px 0;
}

form {
    margin-top: 20px;
    border: 1px solid #ddd;
    padding: 10px;
    background-color: #fff;
}

input[type="text"] {
    padding: 8px;
    margin-right: 5px;
    width: 200px;
}

button {
    padding: 8px 15px;
    background-color: #4CAF50;
    color: white;
    border: none;
    cursor: pointer;
}

button:hover {
    background-color: #45a049;
}
</style>
</html>
